#!/usr/bin/env php
<?php

$autoloaders = array(
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php'
);

foreach ($autoloaders as $loader) {
    if (file_exists($loader)) {
        require $loader;
        break;
    }
}

use JamesHalsall\Licenser\Container\ServiceContainer;
use JamesHalsall\Licenser\Licenser;
use Symfony\Component\Console\Application;

$container = new ServiceContainer();

$application = new Application('Licenser', Licenser::VERSION);
$application->add($container['command.licenser']);
$application->add($container['command.check']);
$application->run();
